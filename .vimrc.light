"GoYo
let g:goyo_width = 120
function! s:goyo_enter()
    :NERDTreeClose
    set noshowmode
    set scrolloff=10
endfunction

function! s:goyo_leave()
    if g:transparent == 1
        hi Normal guibg=NONE
    endif
    set showmode
    set showcmd
    set scrolloff=5
endfunction

autocmd! User GoyoEnter nested call <SID>goyo_enter()
autocmd! User GoyoLeave nested call <SID>goyo_leave()


